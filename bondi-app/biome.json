{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineWidth": 80,
		"lineEnding": "lf",
		"attributePosition": "auto"
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"semicolons": "always",
			"trailingCommas": "all",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noArrayIndexKey": "off", "noExplicitAny": "warn" },
			"correctness": {
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "off"
			}
		}
	}
}
